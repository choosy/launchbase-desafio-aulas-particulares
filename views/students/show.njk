{% extends "layout.njk" %}

{% block content %}

<div class="card">
  <section class="avatar" style="background-image: url({{student.avatar_url}})"></section>

  <section class="details">

  <h3>detalhes</h3>

  {# <div class="item">
    <div>Avatar</div>
    <div>{{student.avatar_url}}</div>
  </div> #}

  <div class="item">
    <div>Nome</div>
    <div>{{student.name}}</div>
  </div>

  <div class="item">
    <div>Email</div>
    <div>{{student.email}}</div>
  </div>

  <div class="item">
    <div>Aniversário</div>
    <div>{{ student.birth }}</div>
  </div>

  <div class="item">
    <div>Ano Escolar</div>
    <div>{{ options[student.school_year] }}</div>
  </div>

  <div class="item">
    <div>Carga Horária Semanal</div>
    <div>{{ student.total_hours }}</div>
  </div>

  <a href="/students/{{ student.id }}/edit" class="button">EDITAR</a>

  </section>

  
</div>

{% endblock content %}