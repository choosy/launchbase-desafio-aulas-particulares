{% extends "layout.njk" %}

{% block content %}

<div class="card">
  <section class="avatar" style="background-image: url({{teacher.avatar_url}})"></section>

  <section class="details">

  <h3>detalhes</h3>

  {# <div class="item">
    <div>Avatar</div>
    <div>{{teacher.avatar_url}}</div>
  </div> #}

  <div class="item">
    <div>Nome</div>
    <div>{{teacher.name}}</div>
  </div>

  <div class="item">
    <div>Idade</div>
    <div>{{teacher.age}}</div>
  </div>

  <div class="item">
    <div>Grau de escolaridade</div>
    <div>{{options[teacher.scholarity]}}</div>
  </div>

  <div class="item">
    <div>Tipo de aula</div>
    <div>{{"Dist√¢ncia" if teacher.class_type == "online" else "Presencial"}}</div>
  </div>

  <div class="item">
    <div>Acompanhamento</div>
    <div>
    {% for service in teacher.services %}
    <span>
    {{service}}
    </span>
    {% endfor %}
    </div>
  </div>

  <div class="item">
    <div>Desde</div>
    <div>{{teacher.created_at}}</div>
  </div>

  <a href="/teachers/{{ teacher.id }}/edit" class="button">EDITAR</a>

  </section>

  
</div>

{% endblock content %}